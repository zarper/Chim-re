<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"/>
            <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
            <link rel="stylesheet" href="{{ asset('css/stylesheet.css') }}">
            <script src="https://code.jquery.com/jquery-3.2.1.min.js"
  integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
  crossorigin="anonymous"></script>

        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body class="background">
        <div class="container-fluid ">
        </br>
        <nav class="navbar navbar-info top-buffer" >
            <div class="container bg-info text-white" style='padding: 10px 10px;border-radius: 3px;'>
               
                <div class='row-fluid bg-info text-white'>
                 <div class='row-fluid '>
                    <a href="{{ path('bijou_liste') }}" class="brand pull-left" style='padding-right: 15px'> 	
                        <img src="{{ asset('logo.png') }}" alt="logo" />
                    </a>
                    <a type="button" class="btn btn-default navbar-btn pull-right" href='{{ path('listeuser') }}'>Utilisateurs</a>
                    <a type="button" class="btn btn-default navbar-btn pull-right" href='{{ path('fos_user_security_logout') }}'>Déconnexion</a></div>
                    <div class='pull-right' style='padding-top:15px; margin-right: 20px'>Utilisateur : {{ app.user.username }}</div>
                </div>
                <div class='clear-fix'></div>
                 <div class='row' style=' margin-top:50px'>
                    <a type="button" class="btn btn-default navbar-btn" href='{{ path('bijou_liste') }}'>Bijoux</a>

                    <a type="button" class="btn btn-default navbar-btn" href='{{ path('etape_liste') }}'>Etape</a>
                    <a type="button" class="btn btn-default navbar-btn" href='{{ path('userprofil' , {'id': app.user.id }) }}'>Tache</a>
                    <a type="button" class="btn btn-default navbar-btn" href='{{ path('client_liste') }}'>Clients</a>
                    <div class="btn-group">
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Incidents <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                          <li><a href='{{ path('incident_liste') }}'>Liste des nouveaux incidents</a></li>
                          <li><a href='{{ path('all_incident_liste') }}'>Liste complète</a></li>
                        </ul>
                    </div>
                    <a type="button" class="btn btn-default navbar-btn" href='{{ path('materiaux_liste') }}'>Materiaux</a>
                    <a type="button" class="btn btn-default navbar-btn" href='{{ path('stock_liste') }}'>Stock</a>
                </div>
             </div>
            </div>          
        </nav> 
        </div> 
        
        
        <div class="container">
        {% block beforebody %}
        
        {% endblock %}
        </div>
        <div class="container bg-info text-white">
        {% block body %}
        
        {% endblock %}
        </div>
        {% block javascripts %}

        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

        {% endblock %}
    </body>
</html>
